<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lfoPane"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:visibility="visible" >

	<TableLayout
	    android:id="@+id/lfoMainPane"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="1"
	    android:shrinkColumns="0"
	    android:stretchColumns="1"
	    android:visibility="visible" >

		<TableRow
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1" >
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:shadowColor="#80000000"
				android:shadowDx="2"
				android:shadowDy="2"
				android:shadowRadius="1"
				android:text="Wave Form"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textSize="13sp" />
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical" >
				<Spinner
					android:id="@+id/lfoWaveForm"
					android:layout_width="wrap_content"
					android:layout_height="40dp"
					android:layout_marginLeft="6dp"
					android:layout_weight="1"
					android:background="@drawable/btn_dropdown" />
				<Button
					android:id="@+id/lfoWaveFormEdit"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:background="@drawable/btn_default"
					android:text=">>"
					android:textColor="@android:color/primary_text_light"
					android:textSize="13sp"
					android:visibility="gone" />
			</LinearLayout>
		</TableRow>
		<TableRow
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1" >

			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:shadowColor="#80000000"
			    android:shadowDx="2"
			    android:shadowDy="2"
			    android:shadowRadius="1"
			    android:text="Rate"
			    android:textAppearance="?android:attr/textAppearanceMedium"
			    android:textSize="13sp" />

			<com.gallantrealm.android.Slider
			    android:id="@+id/lfoFrequency"
			    android:layout_width="match_parent"
			    android:layout_height="fill_parent"
			    android:layout_gravity="center_vertical"
			    android:layout_weight="1"
			    android:max="100"
			    android:progressDrawable="@drawable/progress12_horizontal"
			    android:thumb="@drawable/seek_thumb" />

		</TableRow>

		<TableRow
		    android:id="@+id/lfoRandomRow"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1" >

			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:shadowColor="#80000000"
			    android:shadowDx="2"
			    android:shadowDy="2"
			    android:shadowRadius="1"
			    android:text="Random"
			    android:textAppearance="?android:attr/textAppearanceMedium"
			    android:textSize="13sp" />

			<com.gallantrealm.android.Slider
			    android:id="@+id/lfoRandom"
			    android:layout_width="match_parent"
			    android:layout_height="fill_parent"
			    android:layout_gravity="center_vertical"
			    android:layout_weight="1"
			    android:max="100"
			    android:progressDrawable="@drawable/progress_horizontal"
			    android:thumb="@drawable/seek_thumb" />

		</TableRow>

		<TableRow
		    android:id="@+id/lfoFadeInRow"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1" >

			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:shadowColor="#80000000"
			    android:shadowDx="2"
			    android:shadowDy="2"
			    android:shadowRadius="1"
			    android:text="Fade In"
			    android:textAppearance="?android:attr/textAppearanceMedium"
			    android:textSize="13sp" />

			<com.gallantrealm.android.Slider
			    android:id="@+id/lfoFadeIn"
			    android:layout_width="match_parent"
			    android:layout_height="fill_parent"
			    android:layout_gravity="center_vertical"
			    android:layout_weight="1"
			    android:max="100"
			    android:progressDrawable="@drawable/progress_horizontal"
			    android:thumb="@drawable/seek_thumb" />

		</TableRow>

		<TableRow
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="1" >

			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:shadowColor="#80000000"
			    android:shadowDx="2"
			    android:shadowDy="2"
			    android:shadowRadius="1"
			    android:textAppearance="?android:attr/textAppearanceMedium"
			    android:textSize="13sp" />

			<LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" >

				<CheckBox
				    android:id="@+id/lfoPositive"
				    android:layout_width="wrap_content"
				    android:layout_height="fill_parent"
				    android:layout_weight="1"
				    android:minHeight="5dp"
    	            android:button="@drawable/btn_check"
				    android:shadowColor="#80000000"
				    android:shadowDx="2"
				    android:shadowDy="2"
				    android:shadowRadius="1"
				    android:text="Positive"
				    android:textSize="13sp" />

				<CheckBox
				    android:id="@+id/lfoPulse"
				    android:layout_width="wrap_content"
				    android:layout_height="fill_parent"
				    android:layout_weight="1"
				    android:minHeight="5dp"
	                android:button="@drawable/btn_check"
				    android:shadowColor="#80000000"
				    android:shadowDx="2"
				    android:shadowDy="2"
				    android:shadowRadius="1"
				    android:text="Pulse"
				    android:textSize="13sp" />

				<CheckBox
				    android:id="@+id/lfoSync"
				    android:layout_width="wrap_content"
				    android:layout_height="fill_parent"
				    android:layout_weight="1"
				    android:minHeight="5dp"
	                android:button="@drawable/btn_check"
				    android:shadowColor="#80000000"
				    android:shadowDx="2"
				    android:shadowDy="2"
				    android:shadowRadius="1"
				    android:text="MIDI"
				    android:textSize="13sp" />

			</LinearLayout>
		</TableRow>
	</TableLayout>

	<LinearLayout
	    android:id="@+id/lfoWavePane"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="1"
	    android:orientation="vertical"
	    android:visibility="gone" >

		<Button
		    android:id="@+id/lfoWaveFormDone"
		    android:layout_width="40dp"
		    android:layout_height="40dp"
		    android:background="@drawable/btn_default"
		    android:text="&lt;&lt;"
		    android:textColor="@android:color/primary_text_light"
		    android:textSize="13sp" />

		<com.gallantrealm.modsynth.WaveEditor
		    android:id="@+id/lfoWaveEditor"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="1" />

	</LinearLayout>

</LinearLayout>