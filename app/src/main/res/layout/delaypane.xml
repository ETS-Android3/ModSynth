<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:visibility="visible" >
	<TableLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:shrinkColumns="0"
		android:stretchColumns="1" >
		<TableRow
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1" >
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_marginTop="5dp"
				android:shadowColor="#80000000"
				android:shadowDx="2"
				android:shadowDy="2"
				android:shadowRadius="1"
				android:text="Delay Level"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textSize="13sp" />

			<com.gallantrealm.android.Slider
			    android:id="@+id/delayLevel"
			    android:layout_width="match_parent"
			    android:layout_height="fill_parent"
			    android:layout_gravity="center_vertical"
			    android:max="99"
			    android:progressDrawable="@drawable/progress_horizontal"
			    android:thumb="@drawable/seek_thumb" />

		</TableRow>
		<TableRow
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1" >
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_marginTop="5dp"
				android:shadowColor="#80000000"
				android:shadowDx="2"
				android:shadowDy="2"
				android:shadowRadius="1"
				android:text="Delay Time"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textSize="13sp" />

			<com.gallantrealm.android.Slider
			    android:id="@+id/delayTime"
			    android:layout_width="match_parent"
			    android:layout_height="fill_parent"
			    android:layout_gravity="center_vertical"
			    android:max="99"
			    android:progressDrawable="@drawable/progress_horizontal"
			    android:thumb="@drawable/seek_thumb" />

		</TableRow>
		<TableRow
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1" >
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_marginTop="5dp"
				android:shadowColor="#80000000"
				android:shadowDx="2"
				android:shadowDy="2"
				android:shadowRadius="1"
				android:text="Feedback"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textSize="13sp" />

			<com.gallantrealm.android.Slider
			    android:id="@+id/delayFeedback"
			    android:layout_width="match_parent"
			    android:layout_height="fill_parent"
			    android:layout_gravity="center_vertical"
			    android:max="99"
			    android:progressDrawable="@drawable/progress_horizontal"
			    android:thumb="@drawable/seek_thumb" />

		</TableRow>
		<TableRow
			android:id="@+id/delayModulationRow"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1" >
			<TextView
				android:id="@+id/TextView08"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_marginTop="5dp"
				android:shadowColor="#80000000"
				android:shadowDx="2"
				android:shadowDy="2"
				android:shadowRadius="1"
				android:text="Modulation"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textSize="13sp" />

			<com.gallantrealm.android.Slider
			    android:id="@+id/delayModulation"
			    android:layout_width="match_parent"
			    android:layout_height="fill_parent"
			    android:layout_gravity="center_vertical"
			    android:max="100"
			    android:progressDrawable="@drawable/progress_horizontal"
			    android:thumb="@drawable/seek_thumb" />

		</TableRow>
	</TableLayout>
</LinearLayout>