<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/operatorPane" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:layout_weight="1"
	android:scrollbarStyle="insideInset">

	<TableLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:stretchColumns="1">

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="1">

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_vertical"
				android:shadowColor="#80000000" android:shadowDx="2"
				android:shadowDy="2" android:shadowRadius="1" android:text="Octave"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textSize="12sp" />

			<com.gallantrealm.android.BalanceSlider
				android:id="@+id/opOctave" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:max="10"
				android:progressDrawable="@drawable/progress_horizontal"
				android:thumb="@drawable/seek_thumb" />
		</TableRow>

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TextView android:layout_width="45dp" android:layout_height="wrap_content"
				android:layout_gravity="center_vertical" android:shadowColor="#80000000"
				android:shadowDx="2" android:shadowDy="2" android:shadowRadius="1"
				android:text="Pitch" android:textAppearance="?android:attr/textAppearanceMedium"
				android:textSize="12sp" />

			<com.gallantrealm.android.Slider
				android:id="@+id/opPitch" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:max="12"
				android:progressDrawable="@drawable/progress12_horizontal"
				android:thumb="@drawable/seek_thumb" />
		</TableRow>

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TextView android:layout_width="45dp" android:layout_height="wrap_content"
				android:layout_gravity="center_vertical" android:shadowColor="#80000000"
				android:shadowDx="2" android:shadowDy="2" android:shadowRadius="1"
				android:text="Detune" android:textAppearance="?android:attr/textAppearanceMedium"
				android:textSize="12sp" />

			<com.gallantrealm.android.BalanceSlider
				android:id="@+id/opDetune" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:max="100"
				android:progressDrawable="@drawable/progress_horizontal"
				android:thumb="@drawable/seek_thumb" />
		</TableRow>

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_vertical"
				android:shadowColor="#80000000" android:shadowDx="2"
				android:shadowDy="2" android:shadowRadius="1" android:text="Feedback"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textSize="12sp" />

			<com.gallantrealm.android.Slider
				android:id="@+id/opFeedback" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_vertical"
				android:layout_weight="1" android:max="100"
				android:progressDrawable="@drawable/progress_horizontal"
				android:thumb="@drawable/seek_thumb" />

		</TableRow>

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TextView android:layout_width="45dp" android:layout_height="wrap_content"
				android:layout_gravity="center_vertical" android:shadowColor="#80000000"
				android:shadowDx="2" android:shadowDy="2" android:shadowRadius="1"
				android:text="Delay" android:textAppearance="?android:attr/textAppearanceMedium"
				android:textSize="12sp" />

			<com.gallantrealm.android.Slider
				android:id="@+id/opDelay" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:max="100"
				android:progressDrawable="@drawable/progress_horizontal"
				android:thumb="@drawable/seek_thumb" />
		</TableRow>

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TextView android:layout_width="45dp" android:layout_height="wrap_content"
				android:layout_gravity="center_vertical" android:shadowColor="#80000000"
				android:shadowDx="2" android:shadowDy="2" android:shadowRadius="1"
				android:text="Attack" android:textAppearance="?android:attr/textAppearanceMedium"
				android:textSize="12sp" />

			<com.gallantrealm.android.Slider
				android:id="@+id/opAttack" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:max="100"
				android:progressDrawable="@drawable/progress_horizontal"
				android:thumb="@drawable/seek_thumb" />
		</TableRow>

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TextView android:layout_width="45dp" android:layout_height="wrap_content"
				android:layout_gravity="center_vertical" android:shadowColor="#80000000"
				android:shadowDx="2" android:shadowDy="2" android:shadowRadius="1"
				android:text="Hold" android:textAppearance="?android:attr/textAppearanceMedium"
				android:textSize="12sp" />

			<com.gallantrealm.android.Slider
				android:id="@+id/opHold" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:max="100"
				android:progressDrawable="@drawable/progress_horizontal"
				android:thumb="@drawable/seek_thumb" />
		</TableRow>

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TextView android:layout_width="45dp" android:layout_height="wrap_content"
				android:layout_gravity="center_vertical" android:layout_weight="0"
				android:shadowColor="#80000000" android:shadowDx="2"
				android:shadowDy="2" android:shadowRadius="1" android:text="Decay"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textSize="12sp" />

			<com.gallantrealm.android.Slider
				android:id="@+id/opDecay" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:max="100" android:progressDrawable="@drawable/progress_horizontal"
				android:thumb="@drawable/seek_thumb" />

			<LinearLayout android:layout_width="match_parent"
				android:layout_height="wrap_content">

			</LinearLayout>
		</TableRow>

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TextView android:layout_width="45dp" android:layout_height="wrap_content"
				android:layout_gravity="center_vertical" android:shadowColor="#80000000"
				android:shadowDx="2" android:shadowDy="2" android:shadowRadius="1"
				android:text="Sustain" android:textAppearance="?android:attr/textAppearanceMedium"
				android:textSize="12sp" />

			<com.gallantrealm.android.Slider
				android:id="@+id/opSustain" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:max="100"
				android:progressDrawable="@drawable/progress_horizontal"
				android:thumb="@drawable/seek_thumb" />
		</TableRow>

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_vertical"
				android:shadowColor="#80000000" android:shadowDx="2"
				android:shadowDy="2" android:shadowRadius="1" android:text="Release"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textSize="12sp" />

			<com.gallantrealm.android.Slider
				android:id="@+id/opRelease" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:max="100"
				android:progressDrawable="@drawable/progress_horizontal"
				android:thumb="@drawable/seek_thumb" />
		</TableRow>

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_vertical"
				android:gravity="center_horizontal" android:shadowColor="#80000000"
				android:shadowDx="2" android:shadowDy="2" android:shadowRadius="1"
				android:text="Min" android:textAppearance="?android:attr/textAppearanceMedium"
				android:textSize="12sp" />

			<com.gallantrealm.android.Slider
				android:id="@+id/opMin" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:max="100"
				android:progressDrawable="@drawable/progress_horizontal"
				android:thumb="@drawable/seek_thumb" />
		</TableRow>

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_vertical"
				android:gravity="center_horizontal" android:shadowColor="#80000000"
				android:shadowDx="2" android:shadowDy="2" android:shadowRadius="1"
				android:text="Max" android:textAppearance="?android:attr/textAppearanceMedium"
				android:textSize="12sp" />

			<com.gallantrealm.android.Slider
				android:id="@+id/opMax" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:max="100"
				android:progressDrawable="@drawable/progress_horizontal"
				android:thumb="@drawable/seek_thumb" />
		</TableRow>

		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="1">

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_vertical"
				android:shadowColor="#80000000" android:shadowDx="2"
				android:shadowDy="2" android:shadowRadius="1" android:text="Slope"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textSize="12sp" />

			<LinearLayout android:layout_width="match_parent"
				android:layout_height="wrap_content" android:layout_gravity="center_vertical">

				<Spinner android:id="@+id/opSlopeSpinner"
					android:layout_width="wrap_content" android:layout_height="40dp"
					android:layout_gravity="center_vertical" android:layout_weight="1"
					android:background="@drawable/btn_dropdown" />

				<CheckBox android:id="@+id/opVelocitySensitive"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_gravity="center_vertical" android:layout_weight="0"
					android:button="@drawable/btn_check" android:text="Velocity"
					android:textSize="12sp" />

				<CheckBox android:id="@+id/opKeyScale"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_weight="0" android:button="@drawable/btn_check"
					android:text="Pitch" android:textSize="12sp" />

			</LinearLayout>
		</TableRow>

	</TableLayout>

</ScrollView>